        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="css/owl.carousel.min.css" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css"
            media="screen" />
        <!-- dang ky/dang nhap-->
        <link rel="stylesheet" href="css/formDangKy.css" />
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script
        ><![endif]-->
    </head>
    <!-- body -->
    <body class="main-layout">
        <!-- loader  -->
        <div class="loader_bg">
            <div class="loader"><img src="images/loading.gif" alt="#" /></div>
        </div>
        <!-- end loader -->
        <!-- header-->
        <header>
            <!-- header inner -->
            <div class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                            <div class="full">
                                <div class="center-desk">
                                    <div class="logo">
                                        <a href="/"><img src="images/logo.png" alt="#" /></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                            <div class="menu-area">
                                <div class="limit-box">
                                    <nav class="main-menu">
                                        <ul class="menu-area-main">
                                            <li class="active">
                                                <a href="/">Trang chủ</a>
                                            </li>
                                            <li>
                                                <a href="/danhmucsanpham">Sản phẩm</a>
                                            </li>
                                            <li>
                                                <a href="/lienhe">Liên hệ</a>
                                            </li>
                                            <li>
                                                <a href="/dangky">Đăng ký</a>
                                            </li>
                                            <li>
                                                <a href="/dangnhap"><i class="fa-solid fa-cart-shopping"></i></a>
                                            </li>
                                            <li class="last">
                                                <form action="/timkiem" method="get">
                                                    <div class="input-group rounded">
                                                        <input
                                                            type="search"
                                                            class="form-control rounded"
                                                            placeholder="Search"
                                                            aria-label="Search"
                                                            aria-describedby="search-addon"
                                                            name="search" />
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-search"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 offset-md-6">
                            <div class="location_icon_bottum">
                                <ul>
                                    <li><img src="icon/call.png" />037869xxxx</li>
                                    <li><img src="icon/email.png" />nguyenlongthanhIT@gmail.com</li>
                                    <li><img src="icon/loc.png" />Ha Noi</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end header inner -->
        </header>
        <!-- end header -->
        <!-- form dang nhap-->
        <div class="login">
            <form method="post" action="/auth">
                <h2>Đăng nhập</h2>
                <% if (status) { %>
                <div class="form-group">
                    <p style="color: red"><%=status %></p>
                </div>
                <% } %>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Nhập tên đăng nhập" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Nhập mật khẩu" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Đăng nhập</button>
                </div>
                <a href="/dangky" class="login-or-signin">Đăng ký</a>
                <a href="/quenmk" class="login-or-signin">Quên mật khẩu</a>
            </form>
        </div>
        <!-- end form dang nhap-->
        <!-- footer -->
        <footer>
            <div id="contact" class="footer">
                <div class="container">
                    <div class="row pdn-top-30">
                        <div class="col-md-12">
                            <div class="footer-box">
                                <div class="headinga">
                                    <h3>Địa chỉ</h3>
                                    <span>Hà Nội, Việt Nam</span>
                                    <p>
                                        037869xxxx
                                        <br />nguyenlongthanhIT@gmail.com
                                    </p>
                                </div>
                                <ul class="location_icon">
                                    <li>
                                        <a href="https://www.facebook.com" target="_blank"
                                            ><i class="fa fa-facebook-f"></i
                                        ></a>
                                    </li>
                                    <li>
                                        <a href="https://www.twitter.com" target="_blank"
                                            ><i class="fa fa-twitter"></i
                                        ></a>
                                    </li>
                                    <li>
                                        <a href="https://www.instagram.com" target="_blank"
                                            ><i class="fa fa-instagram"></i
                                        ></a>
                                    </li>
                                </ul>
                                <div class="menu-bottom">
                                    <ul class="link">
                                        <li><a href="#">Trang chủ</a></li>
                                        <li>
                                            <a href="/gioithieu" target="_blank">Giới thiệu</a>
                                        </li>
                                        <li>
                                            <a href="/danhmucsanpham" target="_blank">Sản phẩm</a>
                                        </li>
                                        <li>
                                            <a href="/lienhe" target="_blank">Liên hệ</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end footer -->
        <!-- Javascript files-->
        <script src="js/jquery.min.js"></script>
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/jquery-3.0.0.min.js"></script>
        <script src="js/plugin.js"></script>
        <!-- sidebar -->
        <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="js/custom.js"></script>
        <!-- Font awesome-->
        <script src="https://kit.fontawesome.com/8627de222b.js" crossorigin="anonymous"></script>
        <!-- javascript -->
        <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
        <script>
            $(document).ready(function () {
                $(".fancybox").fancybox({
                    openEffect: "none",
                    closeEffect: "none",
                });

                $(".zoom").hover(
                    function () {
                        $(this).addClass("transition");
                    },
                    function () {
                        $(this).removeClass("transition");
                    }
                );
            });
        </script>
    </body>
    <!-- end body -->
</html>
